  <select id="selectChilds" resultMap="CustomResultMap" >
    select R.*, CASE WHEN CRP.RP IS NULL THEN 'true' ELSE 'false' END AS ISLEAF 
    from bap_resource R
    LEFT JOIN (select RESOURCE_PARENT AS RP from bap_resource GROUP BY RESOURCE_PARENT) CRP ON R.RESOURCE_CODE = CRP.RP
    <where>
    <include refid="Base_If_Condition" />
    </where>
    ORDER BY R.SEQUENCE
  </select>
  
  <select id="selectByRole" resultMap="CustomResultMap" >
  	SELECT R.*, CASE WHEN CRP.RP IS NULL THEN 'true' ELSE 'false' END AS ISLEAF, 
	CASE WHEN REL.ROLE_CODE IS NOT NULL THEN 'true' ELSE 'false' END AS CHECKED, 
	'caidan-' AS ICON 
	FROM bap_resource R
	LEFT JOIN (SELECT RESOURCE_PARENT AS RP FROM bap_resource GROUP BY RESOURCE_PARENT) CRP ON R.RESOURCE_CODE = CRP.RP
	LEFT JOIN (
		SELECT RG.ROLE_CODE, RGR.RESOURCE_CODE FROM bap_role RG
		INNER JOIN bap_role_resource_relation RGR ON RG.ROLE_CODE = RGR.ROLE_CODE
		<where>
			RG.ROLE_CODE = #{roleCode, jdbcType=VARCHAR} AND RG.ENABLE = #{enable, jdbcType=VARCHAR}
		</where> 
	) REL ON R.RESOURCE_CODE = REL.RESOURCE_CODE 
	<where>
		AND R.ENABLE = '1'
    </where>
    ORDER BY R.SEQUENCE
  </select>
  
