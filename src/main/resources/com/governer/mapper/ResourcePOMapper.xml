  <select id="selectRouters" resultMap="BaseResultMap" >
	SELECT BR.* FROM bap_resource BR
	INNER JOIN bap_role_resource_relation BRR on BR.RESOURCE_CODE = BRR.RESOURCE_CODE
	INNER JOIN bap_role ARG on BRR.ROLE_CODE = ARG.ROLE_CODE
	INNER JOIN bap_role_user_relation AEGR on ARG.ROLE_CODE = AEGR.ROLE_CODE
	INNER JOIN bap_user AU on AEGR.USER_CODE = AU.USER_CODE
	<where>
		AU.USER_CODE = #{userCode, jdbcType=VARCHAR} 
    	AND BR.RESOURCE_TYPE IN
    	<foreach collection="resourceTypes" index="index" item="item" open="(" separator="," close=")">
